{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/shared/types"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
